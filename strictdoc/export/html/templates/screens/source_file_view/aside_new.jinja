<div class="source-file__aside">
  <div class="source-file__tools">
    <div id="sourceCodeCoverageFilter" class="source-file__requirements-filter"></div>
  </div>
  <div class="source-file__refer" id="referContainer">

      {%- set
          markers =
            view_object.traceability_index.get_source_file_markers(view_object.source_file.in_doctree_source_file_rel_path_posix)
      -%}

      {%- if markers -%}
      <div class="source-file__toc">

        {%- for marker_ in markers -%}
          {% if marker_.begin_or_end %}
          <div class="source-file__toc-range">
            <div class="source-file__toc-range-header">
              <a
                class="source__range-pointer source__range-button"
                data-begin="{{ marker_.ng_range_line_begin }}"
                data-end="{{ marker_.ng_range_line_end }}"
                href="{{ view_object.render_marker_range_link(marker_) }}"
                data-traceability-file-type="this_file"
              >
              [ {{ marker_.ng_range_line_begin }} â€“ {{ marker_.ng_range_line_end }} ]
              </a>
              <div class="source-file__toc-range-description">
                scope: <b>{{ marker_.get_description() }}</b>
              </div>
            </div>
            {% for node_uid_ in marker_.reqs %}
              {{ view_object.render_aside_requirement(node_uid_, marker_.ng_range_line_begin, marker_.ng_range_line_end) }}
            {% endfor %}
          </div>
          {% endif %}
        {%- endfor -%}

      </div>
      {%- endif -%}

  </div>
</div>
